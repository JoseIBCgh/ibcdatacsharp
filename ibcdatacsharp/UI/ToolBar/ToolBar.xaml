<Page x:Class="ibcdatacsharp.UI.ToolBar.ToolBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp.UI.ToolBar"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="1000"
      Title="ToolBar">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="scan" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/scan-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Scan</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="1" x:Name="connect" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/connect-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Connect</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="2" x:Name="disconnect" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/disconnect-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Disconnect</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="3" x:Name="openCamera" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/openCamera-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Open Camera</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="4" x:Name="record" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image x:Name="recordImage" Source="pack://application:,,,/UI/ToolBar/Icons/record-stop-icon.png" Width="40" Height="40"/>
                <TextBlock x:Name="recordText" TextAlignment="Center" FontSize="11">Record Stopped</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="5" x:Name="capture" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/capture-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Capture</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="6" x:Name="pause" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/pause-icon.png" Width="40" Height="40" x:Name="pauseImage"/>
                <TextBlock TextAlignment="Center" FontSize="11" x:Name="pauseText">Pause</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="7" x:Name="stop" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/stop-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Stop</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>
