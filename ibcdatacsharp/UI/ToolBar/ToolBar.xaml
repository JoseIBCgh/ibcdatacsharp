<Page x:Class="ibcdatacsharp.ToolBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp"
      mc:Ignorable="d" 
      d:DesignHeight="60" d:DesignWidth="1000"
      Title="ToolBar">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="scan">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/scan-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Scan</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="1" x:Name="connect">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/connect-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Connect</TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Column="2" x:Name="disconnect">
            <StackPanel>
                <Image Source="pack://application:,,,/UI/ToolBar/Icons/disconnect-icon.png" Width="40" Height="40"/>
                <TextBlock TextAlignment="Center" FontSize="11">Disconnect</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>
