<Window x:Class="ibcdatacsharp.UI.Login.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp.UI.Login"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300" Height="200" Width="300" ResizeMode="NoResize"
      Title="Login">

    <Grid Width="280" Height="170">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0">Username</TextBlock>
        <TextBox x:Name="username" Grid.Row="0" Grid.Column="1"></TextBox>
        <TextBlock Grid.Row="1" Grid.Column="0">Password</TextBlock>
        <PasswordBox x:Name="password" Grid.Row="1" Grid.Column="1"></PasswordBox>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Click="Button_Click">Login</Button>
    </Grid>
</Window>
