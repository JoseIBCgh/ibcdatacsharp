<Page x:Class="ibcdatacsharp.UI.Graphs.AngleGraphZ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp.UI.Graphs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AngleGraphX">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WpfPlot Grid.Row="1"  x:Name="plot"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock FontSize="24" Padding="0 0 10 0" VerticalAlignment="Center" x:Name="angle" Foreground="Red">0.0</TextBlock>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="12" VerticalAlignment="Center">Offset</TextBlock>
                    <TextBox FontSize="12" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" x:Name="offset">0.0</TextBox>
                </StackPanel>
                <Button VerticalAlignment="Center" FontSize="12" Click="onSetOffset">Set Offset</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
