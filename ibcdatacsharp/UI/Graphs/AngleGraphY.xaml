<Page x:Class="ibcdatacsharp.UI.Graphs.AngleGraphY"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp.UI.Graphs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AngleGraphX">

    <Grid>
        <WpfPlot  x:Name="plot"/>
        <StackPanel Margin="0 0 30 50" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBlock FontSize="20" HorizontalAlignment="Center" x:Name="angle">0.0</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="5 5 5 5">Offset</TextBlock>
                <TextBox Background="Transparent" BorderBrush="Transparent" Padding="5 5 5 5" x:Name="offset">0.0</TextBox>
            </StackPanel>
            <Button Click="onSetOffset">Set Offset</Button>
        </StackPanel>
    </Grid>
</Page>
