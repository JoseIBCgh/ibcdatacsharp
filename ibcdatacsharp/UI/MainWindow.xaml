<Window x:Class="ibcdatacsharp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dock="https://github.com/Dirkster99/AvalonDock"
        xmlns:local="clr-namespace:ibcdatacsharp.UI"
        mc:Ignorable="d"
        Title="Data Acquisition Tool[(c) Copyright 2022 IBC Biomechanics build 0.9.3]" Height="900" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Source="pack://application:,,,/UI/MenuBar/MenuBar.xaml" x:Name="menuBar"/>
        <Frame Grid.Row="1" Source="pack://application:,,,/UI/ToolBar/ToolBar.xaml" x:Name="toolBar"/>
        <dock:DockingManager Grid.Row="2">
            <dock:LayoutRoot>
                <dock:LayoutPanel Orientation="Vertical" DockHeight="*" DockWidth="*">
                    <dock:LayoutAnchorablePaneGroup Orientation="Horizontal" DockHeight="1.5*" DockWidth="*">
                        <dock:LayoutAnchorablePane DockHeight="*" DockWidth="0.75*">
                            <dock:LayoutAnchorable CanFloat="True" CanClose="False" CanHide="True" CanAutoHide="False">
                                <TabControl Grid.Column="0" TabStripPlacement="Top">
                                    <TabItem Header="Devices">
                                        <Frame Source="pack://application:,,,/UI/DeviceList/DeviceList.xaml" x:Name="deviceList"/>
                                    </TabItem>
                                    <TabItem Header="Sessions">
                                        <Frame Source="pack://application:,,,/UI/FileBrowser/FileBrowser.xaml" x:Name="sessions"/>
                                    </TabItem>
                                </TabControl>
                            </dock:LayoutAnchorable>
                        </dock:LayoutAnchorablePane>
                        <dock:LayoutAnchorablePaneGroup Orientation="Vertical" DockHeight="*" DockWidth="4*">
                            <dock:LayoutAnchorablePaneGroup Orientation="Horizontal" DockHeight="1.5*" DockWidth="*">
                                <dock:LayoutAnchorablePane DockHeight="*" DockWidth="1.8*">
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Joint Angle X">
                                        <Frame Source="pack://application:,,,/UI/Graphs/AngleGraphX.xaml" x:Name="angleX"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Joint Angle Y">
                                        <Frame Source="pack://application:,,,/UI/Graphs/AngleGraphY.xaml" x:Name="angleY"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Joint Angle Z">
                                        <Frame Source="pack://application:,,,/UI/Graphs/AngleGraphZ.xaml" x:Name="angleZ"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Velocidad Angular">
                                        <Frame Source="pack://application:,,,/UI/Graphs/GraphAngularVelocity.xaml" x:Name="angularVelocity"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Acceleracion Angular">
                                        <Frame Source="pack://application:,,,/UI/Graphs/GraphAngularAcceleration.xaml" x:Name="angularAcceleration"/>
                                    </dock:LayoutAnchorable>
                                </dock:LayoutAnchorablePane>
                                <dock:LayoutAnchorablePane DockHeight="*" DockWidth="*">
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Camera">
                                        <Frame Source="pack://application:,,,/UI/CamaraViewport/CamaraViewport.xaml" x:Name="camaraViewport"/>
                                    </dock:LayoutAnchorable>
                                </dock:LayoutAnchorablePane>
                            </dock:LayoutAnchorablePaneGroup>
                            <dock:LayoutAnchorablePaneGroup Orientation="Horizontal" DockHeight="*" DockWidth="*">
                                <dock:LayoutAnchorablePane DockHeight="*" DockWidth="*">
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Accelerometer">
                                        <Frame Source="pack://application:,,,/UI/Graphs/GraphAccelerometer.xaml" x:Name="accelerometer"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Gyroscope">
                                        <Frame Source="pack://application:,,,/UI/Graphs/GraphGyroscope.xaml" x:Name="gyroscope"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Magnetometer">
                                        <Frame Source="pack://application:,,,/UI/Graphs/GraphMagnetometer.xaml" x:Name="magnetometer"/>
                                    </dock:LayoutAnchorable>
                                    <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False" Title="Linear Acceleration">
                                        <Frame Source="pack://application:,,,/UI/Graphs/GraphLinAcc.xaml" x:Name="linAcc"/>
                                    </dock:LayoutAnchorable>
                                </dock:LayoutAnchorablePane>
                            </dock:LayoutAnchorablePaneGroup>
                        </dock:LayoutAnchorablePaneGroup>
                    </dock:LayoutAnchorablePaneGroup>
                    <dock:LayoutAnchorablePane DockWidth="*" DockHeight="0.25*">
                        <dock:LayoutAnchorable CanClose="False" CanFloat="True" CanHide="True" CanAutoHide="False">
                            <Frame Source="pack://application:,,,/UI/TimeLine/TimeLine.xaml" x:Name="timeLine"/>
                        </dock:LayoutAnchorable>
                    </dock:LayoutAnchorablePane>
                </dock:LayoutPanel>
            </dock:LayoutRoot>
        </dock:DockingManager>
    </Grid>
</Window>
