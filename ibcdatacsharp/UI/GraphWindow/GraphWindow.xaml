<Page x:Class="ibcdatacsharp.UI.GraphWindow.GraphWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp.UI.GraphWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WpfPlot Grid.Row="0"  x:Name="accelerometer"/>
        <WpfPlot Grid.Row="1"  x:Name="gyroscope"/>
        <WpfPlot Grid.Row="2"  x:Name="magnetometer"/>
    </Grid>
</Page>
