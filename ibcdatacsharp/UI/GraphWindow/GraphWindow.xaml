<Page x:Class="ibcdatacsharp.UI.GraphWindow.GraphWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ibcdatacsharp.UI.GraphWindow"
      xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <oxy:PlotView Grid.Row="0" x:Name="accelerometer" Model="{Binding model_accelerometer.PlotModel}"/>
        <oxy:PlotView Grid.Row="1" x:Name="gyroscope" Model="{Binding model_gyroscope.PlotModel}"/>
        <oxy:PlotView Grid.Row="2" x:Name="magnetometer" Model="{Binding model_magnetometer.PlotModel}"/>
    </Grid>
</Page>
